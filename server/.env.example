# This file is loaded by `ln-server` when running on the host (via dotenv).
# Configure the CoreLightning unix socket path.
LNS_CL_RPC_PATH=
LNS_PORT=

LNS_MIN_WITHDRAWABLE_MSAT=1000
LNS_MAX_WITHDRAWABLE_MSAT=100000

# Bitcoin Core JSON-RPC (for bitcoind status in /health). Check compose file for defaults.
LNS_BTC_RPC_URL=http://127.0.0.1:48332
LNS_BTC_RPC_USER=
LNS_BTC_RPC_PASSWORD=
